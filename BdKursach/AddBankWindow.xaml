<Window x:Class="BdKursach.AddBankWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BdKursach"
        mc:Ignorable="d"
        Title="AddBankWindow" Height="137" Width="400" Background="#464451">
    <Grid Margin="0,0,0,9">
        <TextBox Name="BankNameTextBox" Width="200" Height="25" VerticalAlignment="Top" Margin="10"/>
        <Button Content="Добавить банк" Width="100" Height="25" VerticalAlignment="Top" Margin="220,10,0,0" Background="Red" Foreground="White" Click="AddBankButton_Click"/>

        <ComboBox Name="cmbBankList" Height="25" VerticalAlignment="Top" Margin="100,50,95,0"/>
        <Button Content="Удалить банк" Width="100" Height="25" VerticalAlignment="Top" Margin="220,50,0,0" Background="Red" Foreground="White" Click="DeleteBankButton_Click"/>

    </Grid>
</Window>
